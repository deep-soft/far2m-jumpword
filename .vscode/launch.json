{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "far2m",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/../_build_debug/install/far2m",
            "stopAtEntry": false,
            "args": [],
            "cwd": "/tmp",
            "environment": [
                {
                    "name": "FAR2M_STD",
                    "value": "-"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "ninja"
        }
    ]
}